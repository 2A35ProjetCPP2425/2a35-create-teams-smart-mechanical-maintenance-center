   <string notr="true">/* Style général pour la fenêtre */
QWidget {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, stop:0 #1e1e2f, stop:1 #2e2e3f);
    color: #ffffff;
    font-family: 'Segoe UI', Arial, sans-serif;
    font-size: 14px;
}

/* Style des champs de texte (identifiant, password) */
QLineEdit {
    background-color: #2e2e3f;
    color: #ffffff;
    border: 2px solid #3a3f55;
    border-radius: 8px;
    padding: 10px;
    font-size: 14px;
    transition: all 0.3s ease-in-out;
}

QLineEdit:focus {
    border: 2px solid #7289da; /* Bordure colorée lorsqu'on sélectionne le champ */
    background-color: #40455a; /* Changement de couleur du fond */
}

/* Style des boutons */
QPushButton {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, stop:0 #4e8cff, stop:1 #375e97);
    color: #ffffff;
    border: 2px solid #3a3f55;
    border-radius: 8px;
    padding: 10px;
    font-size: 14px;
    font-weight: bold;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.25);
    transition: all 0.3s ease-in-out;
}

QPushButton:hover {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, stop:0 #6aa6ff, stop:1 #4e8cff);
    transform: scale(1.05); /* Effet zoom */
}

QPushButton:pressed {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, stop:0 #375e97, stop:1 #2d4d7a);
    transform: scale(0.95); /* Effet d'enfoncement */
}

/* Style des labels (titre et slogan) */
QLabel#title {
    font-size: 28px;
    font-weight: bold;
    color: #00d4ff;
    text-align: center;
    text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
}

QLabel#subtitle {
    font-size: 16px;
    color: #b0b3c5;
    text-align: center;
    margin-top: 5px;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
}

/* Style pour les boutons &quot;connexion&quot; et &quot;connecter client&quot; */
QPushButton#connectButton {
    background: #3a8dff;
    color: #ffffff;
    font-size: 14px;
    font-weight: bold;
    padding: 10px 20px;
    border-radius: 8px;
    border: none;
}

QPushButton#clientButton {
    background: #ff8d3a;
    color: #ffffff;
    font-size: 14px;
    font-weight: bold;
    padding: 10px 20px;
    border-radius: 8px;
    border: none;
}

/* Animation des boutons */
QPushButton:hover#connectButton,
QPushButton:hover#clientButton {
    filter: brightness(1.2);
    transform: scale(1.03);
}

QPushButton:pressed#connectButton,
QPushButton:pressed#clientButton {
    transform: scale(0.97);
    filter: brightness(0.9);
}

/* Ajout d'ombre autour des widgets */
QLineEdit, QPushButton {
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
}

/* Transitions pour un effet fluide */
QWidget * {
    transition: all 0.3s ease;
}
